            android:name=".ActivityRuta"
            android:exported="false" />
        <activity
            android:name=".ParticiparEvent"
            android:exported="false" />
        <activity
            android:name=".Formularis.FormulariContacte"
            android:exported="false" />
        <activity
            android:name=".Formularis.FormulariNivell"
            android:exported="false" />
        <activity
