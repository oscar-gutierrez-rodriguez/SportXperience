        android:icon="@drawable/sportxperiencelogo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/sportxperiencelogo"
        android:supportsRtl="true"
        android:theme="@style/Theme.SportXperience_Android"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".Xat"
