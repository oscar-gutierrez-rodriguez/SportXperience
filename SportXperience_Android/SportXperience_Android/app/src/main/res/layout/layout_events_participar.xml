<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nomEventPart_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nom"
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:textSize="21sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/esportEventPart_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="esport"
                android:textAlignment="center"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/poblacioEventPart_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="poblacio"
                android:textAlignment="center"
                android:textSize="14sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imatgeEventPart_card"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/border_image"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/dataIniciPart_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="data inici"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:textStyle="italic"/>

                <TextView
                    android:id="@+id/dataFinalPart_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="data final"
                    android:textSize="14sp"
                    android:textStyle="italic"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingEnd="8dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/bt_ubicacio_card"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginVertical="4dp"
                        android:layout_marginHorizontal="10dp"
                        android:text="UbicaciÃ³"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:icon="@drawable/locationicon" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/bt_xat_card"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginVertical="4dp"
                        android:layout_marginHorizontal="10dp"
                        android:text="Xat"
                        android:textStyle="bold"
                        app:icon="@drawable/baseline_chat_24"
                        android:textSize="14sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/bt_resultats_card"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginVertical="4dp"
                        android:layout_marginHorizontal="10dp"
                        app:icon="@drawable/baseline_emoji_events_24"
                        android:text="Resultats"
                        android:textStyle="bold"
                        android:textSize="14sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/bt_desapuntarse_card"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginVertical="4dp"
                        android:layout_marginHorizontal="10dp"
                        android:text="Desapuntar-se"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:icon="@drawable/baseline_cancel_24"
                        android:backgroundTint="#890909"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
